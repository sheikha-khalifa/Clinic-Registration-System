@model List<Patient>

<div>
    <h2> Patients List </h2>
    <a asp-action="Create" class="btn btn-primary float-end"> Add New Patient</a>
    @if (Model.Count() > 0)
    {
        
            <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID </th>
                <th scope="col">Name</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model)
                {
            <tr class="table-info">
                <th class="col-4">@item.PatientID</th>
                <td class="col-4">@item.Name</td>
                <td class="col-2"><a  class="btn btn-outline-dark">View Appointments</a></td>
                        <td class="col-2"><a asp-action="CreateAppoin" class="btn btn-outline-dark">Add Appointment</a></td>
            </tr>}
        </tbody>
    </table>
        
    }
</div>