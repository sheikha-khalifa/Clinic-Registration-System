@model List<Spatialization>

<div>
    <h2> Specilization List </h2>
    @* <a asp-action="Create" class="btn btn-primary float-end"> Add </a> *@
    @if (Model.Count() > 0)
    {

        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Code </th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-info">
                        <td class="col-4">@item.Code</td>
                        <td class="col-4">@item.Name</td>
                        <td class="col-4 ">@item.Description</td>
                        <td class="col-2"><a class="btn btn-outline-dark">Appointment Detail</a></td>
                        <td class="col-2"><a asp-action="UpdateAppoitment" class="btn btn-outline-dark">Update Appointment</a></td>
                    </tr>
                }
            </tbody>
        </table>

    }

</div>
